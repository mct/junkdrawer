#!/usr/bin/perl

# From https://blog.plover.com/prog/accumulate.html

#   cat <<EOF | ./accumulate
#   > foo 1
#   > bar 2
#   > foo 3
#   > EOF
#
#   bar 2
#   foo 1 3

use Getopt::Std;
my %opt = (k => 1, v => 2);
getopts('k:v:', \%opt) or usage();
for (qw(k v)) {
  $opt{$_} -= 1 if $opt{$_} > 0;
}

while (<>) {
  chomp;
  my @F = split;
  push @{$K{$F[$opt{k}]}}, $F[$opt{v}];
}

for my $k (keys %K) {
  print "$k @{$K{$k}}\n";
}
